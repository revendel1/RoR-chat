<div class="container">
  <%= form_tag sessions_path, class: 'form-signin form-group' do |form| %>
    <p id='alert'><%= alert %></p>
    <h1 class="h3 mb-3 font-weight-normal">Log In</h1>
    <div class="form-group mb-3">
      <%= label_tag :login %>
      <%= text_field_tag :login, '', class: 'form-control col-xs-6 mx-sm-3' %>
    </div>
    <div class="form-group mb-3">
      <%= label_tag :password %>
      <%= password_field_tag :password, '', class: 'form-control col-xs-6' %>
    </div>
    <%= submit_tag 'Log In', class: 'btn btn-outline-primary'%>
    <p></p>
    <p></p>
  <% end %>
  <p><%= link_to 'Main Page', root_url, class: 'btn btn-outline-primary' %>&nbsp
  <%= link_to 'Sign Up', signup_url, class: 'btn btn-outline-primary' %></p>
  </div>